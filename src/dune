(env
    (dev
        (flags (:standard
                          -w -32   ; Unused value declaration
                          -w -26   ; Unused var
                          -w -27   ; Unused var strict
                          -g
                )
        )
    )
)

(library
  (name slplugin)
  (public_name frama-c-slplugin.core)
  (flags -open Frama_c_kernel :standard)
  (libraries frama-c.kernel astral)
  (inline_tests 
    (libraries frama-c.init.cmdline) ; this is required to run inline tests in frama-c plugin
    (flags (-stop-on-error))
  )
  (preprocess (pps ppx_assert ppx_inline_test))
)

(plugin
  (optional)
  (name slplugin)
  (libraries frama-c-slplugin.core)
  (site (frama-c plugins))
)
